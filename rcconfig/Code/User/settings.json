// Place your settings in this file to overwrite the default settings
{
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    // Controls the font size in pixels.
    "editor.fontSize": 11,
    "editor.minimap.enabled": true,
    // When enabled, will open files in a new window instead of reusing an existing instance.
    "window.openFilesInNewWindow": "on",
    "files.associations": {
        "*.ml": "ocaml",
        "*.mli": "ocaml"
    },
    "ocaml.merlinPath": "${home}/.opam/system/bin/ocamlmerlin",
    "ocaml.ocpIndentPath": "${home}/.opam/system/bin/ocp-indent",
    "html.format.enable": false,
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true,
        "**/dist": true
    },
    "vsicons.projectDetection.autoReload": true,
    "workbench.iconTheme": "vscode-icons",
    //---------------------------------------------------------
    //
    // Python
    //
    // Whether to lint Python files.
    "python.linting.enabled": true,
    // Whether to lint Python files using pylint.
    "python.linting.pylintEnabled": false,
    // Whether to lint Python files using flake8
    "python.linting.flake8Enabled": true,
    // Whether to lint Python files using mypy.
    "python.linting.mypyEnabled": false,
    // Whether to lint Python files when modified.
    "python.linting.lintOnTextChange": true,
    // Whether to lint Python files when saved.
    "python.linting.lintOnSave": true,
    // Provider for formatting. Possible options include 'autopep8' and 'yapf'.
    "python.formatting.provider": "yapf",
    // Format the document upon saving.
    "python.formatting.formatOnSave": true,
    //
    // end Python
    //
    //---------------------------------------------------------
    //
    // Typescript
    //
    // Format the document upon saving.
    "typescript.check.tscVersion": false,
    "tslint.autoFixOnSave": true,
    //
    // end Typescript
    //
    //---------------------------------------------------------
    //
    // Javascript
    //
    "eslint.autoFixOnSave": true,
    //
    // end Javascript
    //
    //---------------------------------------------------------
    //
    // Stylelint
    //
    "stylelint.enable": true,
    "stylefmt.useStylelintConfigOverrides": true,
    //
    // end Stylelint
    //
    //---------------------------------------------------------
    //
    // Docker
    //
    "docker.defaultRegistry": "registry.fap.no",
    //
    // end Docker
    //
    //---------------------------------------------------------
    //
    // rust
    //
    // Turn on/off autoformatting file on save
    "rust.formatOnSave": false,
    // Turn on/off autochecking file on save using cargo check
    "rust.checkOnSave": false,
    // Specifies path to Racer binary if it's not in PATH
    "rust.racerPath": "${home}/.cargo/bin/racer",
    // Specifies path to Rustfmt binary if it's not in PATH
    "rust.rustfmtPath": "${home}/.cargo/bin/rustfmt",
    // Specifies path to Rustsym binary if it's not in PATH
    "rust.rustsymPath": "${home}/.cargo/bin/rustsym"
    //
    // end rust
    //
}